<div class="row" data-ng-app="AngulaRails" data-ng-controller="TacoOrderController">
  <div class="col-md-6">
    <h3>Add Taco to Order</h3>
    <form data-ng-submit="addTaco()">
      <div class="form-group">
        <label for="name">Name your creation</label>
        <input type="text" class="form-control" placeholder="Super Tasy" data-ng-model="taco.name">
      </div>
      <div class="form-group">
        <label for="filling">Select your filling</label>
        <select data-ng-model="taco.filling" class="form-control" data-ng-options="f for f in fillings">
          <option value="">Pick a filling</option>
        </select>
      </div>
      <button class="btn btn-primary">
        Submit
      </button>
    </form>
  </div>
  <div class="col-md-6">
    <h3>Your Order</h3>

    <table class="table">
      <tbody>
        <tr data-ng-repeat="taco in tacos">
          <td>{{ taco.name }}</td>
          <td>{{ taco.filling }}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>